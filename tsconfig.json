{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "esnext",
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "removeComments": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "@wdio/cucumber-framework",
            "expect-webdriverio",
            "node",
            "webdriverio/sync",
            "mocha",
        ]
    },
    "include": [
        "./src/**/*.ts"
    ] ,
    "exclude": [
        "node_modules"
    ]
}